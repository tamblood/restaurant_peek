<div class="container">
  <div class="welcome_screen">
    
    <form class="form-signin">
      <div class="welcome_screen_header">
        <h2 class="form-signin-heading">Welcome To Restaurant Peek!</h2>
      </div> <!-- class welcome_screen_header -->

      <div class="welcome_screen_sign_in">
        <button class="btn btn-sm btn-primary" type="submit">Sign in</button>
      </div> <!-- class welcome_sign_in -->
    </form>

  </div> <!-- class welcome_screen -->




  <div class="restaurant_screen">
    <div class="restaurant_screen_header">
      <h1>
        Welcome Back, <%= @user.name %>!
      </h1>
    </div> <!-- class restaurant screen header -->
    <div class="restaurant_screen_description">
      <h3>Here are your selected restaurants:</h3>
    </div> <!-- class restaurant screen description -->
  

   
   <div class="row">
   <div class="restaurant_list">
        <% @user.restaurants.each do |restaurant| %>
        <div class="col-sm-6 col-md-4">
        <div class="restaurant_list_item">
          <div class="thumbnail">
            <div class="caption">
            <h3><%= restaurant.name %></h3><br>
            <form class="show_special">
              <input class="show_special" type="submit" value="Show special">
            </form>
            <h4 class="restaurant_special"></h4>
            <form class="send_text">
              <input class="send_text" type="submit" value="Send me a text">
            </form>
            </div> <!-- class caption -->
          </div> <!-- class thumbnail -->
        </div> <!-- class restaurant_list_item -->
        </div> <!-- class col-sm-6 col-md-4 -->
        <% end %>
      </ul>
    </div> <!-- class restaurant_list -->
    </div> <!-- class row -->
    
  </div> <!-- class restaurant_screen -->

</div> <!-- class container -->
